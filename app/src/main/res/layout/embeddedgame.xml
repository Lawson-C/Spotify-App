<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top_tracks_display"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".wrappedDisplays.TopTracks"
    android:background="@color/black">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="243dp"
        android:background="@color/dark_purple">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/dark_purple"
                android:gravity="center"
                android:orientation="vertical"
                android:text="GUESS THE SONG"
                android:textColor="@color/purple_200"
                android:textSize="30dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="460dp"
            android:layout_marginTop="60dp"
            android:background="@color/dark_purple"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/dark_purple"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/song_guess_one_text"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@color/dark_purple"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="Song 1"
                    android:textColor="@color/purple_200"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/song_guess_one"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/purple_button_border"
                    android:textColor="@color/white"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/dark_purple"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/song_guess_two_text"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@color/dark_purple"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="Song 2"
                    android:textColor="@color/purple_200"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/song_guess_two"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/purple_button_border"
                    android:textColor="@color/white"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/dark_purple"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/song_guess_three_text"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@color/dark_purple"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="Song 3"
                    android:textColor="@color/purple_200"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/song_guess_three"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/purple_button_border"
                    android:textColor="@color/white"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/dark_purple"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/song_guess_four_text"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@color/dark_purple"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="Song 4"
                    android:textColor="@color/purple_200"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/song_guess_four"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/purple_button_border"
                    android:textColor="@color/white"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/dark_purple"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/song_guess_five_text"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@color/dark_purple"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="Song 5"
                    android:textColor="@color/purple_200"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/song_guess_five"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/purple_button_border"
                    android:textColor="@color/white"
                    android:text="" />

            </LinearLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="49dp">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/get_top_genres"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:backgroundTint="@null"
            android:background="@drawable/purple_button_border"
            android:textColor="@color/white"
            android:text="Get Top Genres" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
