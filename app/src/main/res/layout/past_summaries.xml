<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/past_summaries_frag"
    android:background="@color/dark_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/past_summaries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:fontFamily="@font/manrope_extrabold"
        android:text="@string/past_summaries"
        android:textAlignment="center"
        android:textColor="@color/spotify_green"
        android:textSize="44sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/past4weeks"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/button_border"
        android:fontFamily="@font/manrope_bold"
        android:text="@string/_4_weeks"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:backgroundTint="@null"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/past6months"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/button_border"
        android:fontFamily="@font/manrope_bold"
        android:text="@string/_6_months"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:backgroundTint="@null"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/past1yr"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/button_border"
        android:fontFamily="@font/manrope_bold"
        android:text="@string/_1_year"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:backgroundTint="@null"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/past_back"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/button_border"
        android:fontFamily="@font/manrope_bold"
        android:text="@string/back_text"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:backgroundTint="@null"
        android:layout_margin="35dp"/>
</LinearLayout>