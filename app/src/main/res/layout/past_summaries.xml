<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/past_summaries_frag"
    android:background="@color/dark_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/past_summaries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:fontFamily="@font/manrope_extrabold"
        android:text="@string/past_summaries"
        android:textAlignment="center"
        android:textColor="@color/spotify_green"
        android:textSize="44sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:fontFamily="@font/manrope_bold"
            android:gravity="center"
            android:text="View past summaries here, based on date and time frame."
            android:textColor="@color/spotify_green"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="48dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="40dp"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:inputType="text"
                android:textColor="@color/spotify_green"
                android:ems="10"
                android:text="Day" />

            <EditText
                android:id="@+id/dayInput"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:ems="10"
                android:inputType="number"
                android:textColorHint="@color/spotify_green"
                android:textColor="@color/spotify_green"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="40dp"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:inputType="text"
                android:textColor="@color/spotify_green"
                android:ems="10"
                android:text="Month" />

            <EditText
                android:id="@+id/monthInput"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:ems="10"
                android:inputType="number"
                android:textColorHint="@color/spotify_green"
                android:textColor="@color/spotify_green"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="40dp"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:inputType="text"
                android:textColor="@color/spotify_green"
                android:ems="10"
                android:text="Year" />

            <EditText
                android:id="@+id/yearInput"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:ems="10"
                android:inputType="number"
                android:textColorHint="@color/spotify_green"
                android:textColor="@color/spotify_green"
                android:layout_marginStart="5dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="20dp"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:inputType="text"
                android:textColor="@color/spotify_green"
                android:ems="10"
                android:text="4W" />

            <CheckBox
                android:id="@+id/shortTerm"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:ems="10"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="20dp"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:inputType="text"
                android:textColor="@color/spotify_green"
                android:ems="10"
                android:text="6M" />

            <CheckBox
                android:id="@+id/mediumTerm"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:ems="10"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="20dp"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:inputType="text"
                android:textColor="@color/spotify_green"
                android:ems="10"
                android:text="1Y" />

            <CheckBox
                android:id="@+id/longTerm"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:ems="10"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/generatePastWrapped"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/button_border"
        android:fontFamily="@font/manrope_bold"
        android:text="Generate"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:backgroundTint="@null"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/backButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/button_border"
        android:fontFamily="@font/manrope_bold"
        android:text="Back"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:backgroundTint="@null"
        android:layout_margin="20dp"/>
</LinearLayout>